<h1>{{title}}</h1>

<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Today</th>
        <th scope="col">Low</th>
        <th scope="col">High</th>
        <th scope="col">Average</th>
      </tr>
    </thead>
    <tbody>
      {{#each coins}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td class="d-flex flex-wrap align-items-center"> <img class="icon" src='/public/images/ada.png'> <span class="coin">{{this.coin}}</span> <span class="symbol" style="text-transform:uppercase">{{this.symbol}}</span></td>
          <td>{{this.today}}</td>
          <td>{{this.min_value}}</td>
          <td>{{this.max_value}}</td>
          <td>{{this.avg_value}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>